<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d{ISO8601}][%-5p][%-25c] %m%n" />
    </Console>
    <Socket name="Socket" host="localhost" port="12345">
      <SerializedLayout />
    </Socket>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="Socket"/>
    </Root>
  </Loggers>
</Configuration>

